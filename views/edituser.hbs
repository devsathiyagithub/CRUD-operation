<h3>Edit Student</h3>


{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}

{{#each rows}}
<form method="post" action="/edituser/{{this.ID}}">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" value="{{this.NAME}}" name="name">
    </div>

    <div class="form-group">
        <label for="age">Age</label>
        <input type="number" value="{{this.AGE}}" name="age">
    </div>

    <div class="form-group">
        <label for="city">City</label>
        <input type="text" value="{{this.CITY}}" name="city">
    </div>

    <div class="form-group">
        <button class="btn" type="submit"> Update details</button>
        <a class="btn" href="/">Back</a>
    </div>





</form>
{{/each}}